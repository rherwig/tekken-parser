// Docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum MoveType {
    UNSET
    LAUNCHER
    SCREW
    FINISHER
    EXTENDER
}

enum InstructionType {
    MOVEMENT
    ACTION
    SPECIAL
}

type Move {
    name         String?
    type         MoveType      @default(UNSET)
    instructions Instruction[]
}

type Instruction {
    slug     String
    type     InstructionType
    notation String
}

model Character {
    id     String  @id @default(auto()) @map("_id") @db.ObjectId
    name   String  @unique
    combos Combo[]
}

model Combo {
    id          String    @id @map("_id")
    name        String?
    damage      Int?
    hits        Int?
    notes       String?
    character   Character @relation(fields: [characterId], references: [id])
    characterId String
    moves       Move[]
}
